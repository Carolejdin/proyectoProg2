<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%- include('./partials/head') %>
</head>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %> 
<% } else{%>
		<%- include('./partials/header')  %> 
<% } %>

		<!-- /Header -->

		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="/images/<%= users.dataValues.profilePic%> " alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title"><%= users.dataValues.username %> </h1>
								<%=profile.users.username %>  
								<% if (locals.user)%>
								<% if(locals.user.username == users.dataValues.username){ %> 
									<a href="/users/profileEdit">Editar mi perfil <i class="fas fa-cog"></i></a>
								<% } else { %> 
									<a href="/users/profile"></a>
									<form action="/users/seguir/ <%= users.dataValues.id %> " method="post">
									<button class="btn mt-3 ml-4" type="submit" name="seguir">Seguir</button>
									<% } %>
									<%  else { %> 
										<a href="/users/profile"></a> 
									<% } %> 	
									</form>
				
						</div>
						<div>
							<ul class="">
								<h4><%= users.dataValues.email %> </h4>
								<% if(producto.length >0) { %> 
									<li>Productos: <%= producto.length %> </li>
									<% for (let i=0 ; i < producto.length; i++) { %> 
									<li> <a href="/product/<%=producto[i].dataValues.nombre %> "><%= producto[i].dataValues.nombre %></a></li>
									<% } %> 
									<% } else { %> 
									<li>Producto: No ha publicado productos aún</li>
									<% } %> 
									<li>Seguidores: <%= seguidores.length %> </li>
									<% if (comentarios.length > 0) {%>
									<li> COmentarios: <%= comentarios.length %> </li>
									<% } else { %> 
										<li> Comentarios: No ha hecho comentarios aún</li>
										<% } %> 
					
							</ul>
						</div>
					</div>
				</div>
				
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				
				
		<!-- /Mis productos -->


		<!-- footer -->
		<%- include('./partials/footer') %>
			<!-- /footer -->
</body>

</html>