<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head', {title: 'Listado de productos'}) %>
<!-- Include Head -->

<head>
	<%- include('./partials/head') %>
</head>

<body>
	<%- include('./partials/header') %>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Nombre del producto</h2>
			<p class="product-detail-description">
				<a href="/product/productAdd">Agregar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= listaProduct[id].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description"> <%= listaProduct[id].descripcion %></p>
				</article>
				<% for (let i=0; i< comentarios.length; i++) {%>
				<div class="product-detail">
					<div class="col-12 col-lg-4">
						<section class="comments">
							<article>
								<img src="https://via.placeholder.com/35" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="/profile"> </a> <%=comentarios[i].nombre%></strong>
										<%=comentarios[i].texto%></p>
								</div>

							</article>

						</section>
					</div>
				</div>
			</div>
		</div>
		<% } %>
		<form class="form" action="/register" method="POST">
			<input class="form-input" type="text" value="" placeholder="Agregar comentario">
			<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
		</form>
		<!-- /product detail -->

		<%- include('./partials/footer') %>

</body>

</html>